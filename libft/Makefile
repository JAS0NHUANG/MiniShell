# **************************************************************************** #
#       COMANDS                                                                #
# **************************************************************************** #
CC				=	gcc
RM				=	rm -rf
AR				=	ar rcs

# **************************************************************************** #
#       TITLE                                                                  #
# **************************************************************************** #
LIBFT_A			=	libft.a

# **************************************************************************** #
#       SOURCES                                                                #
# **************************************************************************** #
SRCS			=	ft_arraylen.c \
				ft_is_prime.c \
				ft_next_prime.c \
				ft_strlen.c \
				ft_strjoin.c \
				ft_strncmp.c \
				ft_strdup.c \
				ft_substr.c \
				ft_index_of.c \
				ft_putstr_array.c \
				ft_putstr_fd.c \
				ft_isalpha.c \
				ft_isdigit.c \
				ft_split.c \
				ft_free_char_array.c \
				ft_atoi.c \
				ft_itoa.c \
				ft_calloc.c \
				ft_memset.c \

INCS			=	libft.h

# **************************************************************************** #
#       RULES                                                                  #
# **************************************************************************** #

OBJS			=	$(SRCS:.c=.o)


%.o				:	%.c $(INCS)
					$(CC) $(CFLAGS) -c $< -o $@

$(LIBFT_A)		:	$(INCS) $(OBJS)
					$(AR) $(LIBFT_A) $(OBJS)

all				:	$(LIBFT_A)

clean			:
					@$(RM) $(OBJS) $(GNL_OBJS)

fclean			:	clean
					@$(RM) $(LIBFT_A)

re			:	fclean all

# **************************************************************************** #
#       PHONY                                                                  #
# **************************************************************************** #
.PHONY		:	all bonus clean fclean re
